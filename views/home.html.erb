<div id="microblog">
  <table cellpadding="0" cellspacing="0">
    <tbody>
    <% tweets.each do |tweet| %>
        <tr>
          <td></td>
          <td class="date">
            <%= helper.format(tweet.created_at) %>
          </td>
          <td class="tweet">
            <%= helper.parse(tweet) %>
          </td>
          <td></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>