<div id="microblog">
  <table cellpadding="0" cellspacing="0">
    <tbody>
    <% timeline.each do |timestamp, entry| %>
        <tr>
          <td>&nbsp;</td>
          <td class="date">
            <%= base.format(timestamp) %>
          </td>
          <td class="entry">
            <% if entry.is_a?(Twitter::Tweet)%>
                <%= twitter.parse(entry) %>
            <% else %>
                <%= entry.image_link %>
                <%= instagram.parse(entry.text) %>
            <% end %>
          </td>
          <td>&nbsp;</td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
